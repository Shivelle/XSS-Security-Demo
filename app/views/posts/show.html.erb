<p id="notice"><%= notice %></p>

<div>
  <h3>Title:</h3>
  <%= @post.title %>
</div>

<div>
  <h3>Description:</h3>
  <%= sanitize @post.description %>
</div>

<% unless @post.code == '' %>
  <div>
    <h3>Evil Input:</h3>
    <code><textarea class="code" readonly><%= @post.code %></textarea></code>
  </div>
<% end %>

<div class="post_content">
  <h3>Content:</h3>
  <div><%= @post.body.html_safe %></div>
</div>

<div id="index"></div>

<div class="controls">
  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
</div>
